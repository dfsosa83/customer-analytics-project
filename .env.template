# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Customer Analytics API
APP_VERSION=0.1.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# =============================================================================
# SNOWFLAKE CONFIGURATION
# =============================================================================
# Your Snowflake account identifier (e.g., abc12345.us-east-1)
SNOWFLAKE_ACCOUNT=XVXQZEX-AAB14864

# Snowflake username
SNOWFLAKE_USER=DSOSA

# Snowflake password
SNOWFLAKE_PASSWORD=@tomP0werS3040!

# Snowflake warehouse name
SNOWFLAKE_WAREHOUSE=COMPUTE_WH

# Snowflake database name
SNOWFLAKE_DATABASE=DATA_SCIENCE

# Snowflake schema name
SNOWFLAKE_SCHEMA=PUBLIC

# Optional: Snowflake role (if not specified, uses default role)
# SNOWFLAKE_ROLE=your_role

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Query timeout in seconds
QUERY_TIMEOUT=300

# Database connection pool size
CONNECTION_POOL_SIZE=10

# Cache TTL in seconds (1 hour = 3600)
CACHE_TTL=3600

# Maximum rows to return in a single query
MAX_QUERY_ROWS=10000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Secret key for session management (generate a secure random string)
SECRET_KEY=your_secret_key_here_change_this_in_production

# CORS origins (comma-separated list)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (relative to project root)
LOG_FILE=logs/app.log

# Enable structured logging (true/false)
STRUCTURED_LOGGING=true

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
# Redis host (use 'redis-cache' for Docker Compose, 'localhost' for local)
REDIS_HOST=redis-cache

# Redis port
REDIS_PORT=6379

# Redis database number
REDIS_DB=0

# Redis password (if required)
# REDIS_PASSWORD=your_redis_password

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API prefix for all endpoints
API_PREFIX=/api

# Enable API documentation endpoints
ENABLE_DOCS=true

# API documentation URL
DOCS_URL=/docs

# ReDoc documentation URL
REDOC_URL=/redoc

# =============================================================================
# DATA EXPORT SETTINGS
# =============================================================================
# Default export format (csv, json, parquet)
DEFAULT_EXPORT_FORMAT=csv

# Maximum export file size in MB
MAX_EXPORT_SIZE_MB=100

# Export file retention days
EXPORT_RETENTION_DAYS=30

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================
# Enable health check endpoints
ENABLE_HEALTH_CHECKS=true

# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=10

# Enable metrics collection
ENABLE_METRICS=true

# Metrics endpoint path
METRICS_ENDPOINT=/metrics

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable development mode features
DEVELOPMENT_MODE=true

# Enable auto-reload for development
AUTO_RELOAD=true

# Enable debug toolbar
DEBUG_TOOLBAR=false

